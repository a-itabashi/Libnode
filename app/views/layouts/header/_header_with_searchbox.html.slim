.row.header-row#introjs-step2
  .searchbox
    = search_form_for @search, url: books_path do |f|
      = icon("fas", "tag", class: "category-select")
      = f.collection_select :categories_id_eq, Category.all, :id, :name, include_blank: 'カテゴリ選択'
      = f.text_field :title_cont, placeholder: 'タイトル検索', class: 'search-text'
      = button_tag type: 'submit', class: 'search-btn', value: 'search' do
        = icon("fas", "search")

  - if @books.count != Book.count
    span.search-result 検索結果#{@books.count}件
    = link_to '検索解除', books_path, class: 'search-clear'

  .header-help
    = icon('fas', 'question-circle')
